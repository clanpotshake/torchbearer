<div class="dice-roll">
  {{log 'roll.hbs' this}}
    {{#if flavor}}
    <div class="dice-flavor">{{flavor}}</div>
    {{/if}}
    <div class="dice-result">
        <div class="dice-formula">{{formula}}</div>
        {{{tooltip}}}
        <h4 class="dice-total{{#if isFail}} tb-dice-total-fail{{/if}}{{#if isSuccess}} tb-dice-total-pass{{/if}}">{{total}}
        </h4>
      {{#if (gt sixes 0)}}
        <div>You have {{sixes}} 6s available to reroll</div>
      {{/if}}
      {{#if (gt fails 0)}}
        <div>You have {{fails}} fails available to reroll</div>
      {{/if}}
    </div>
</div>
