<form class="{{cssClass}}" autocomplete="off">
  {{log 'gear-sheet.hbs' this}}
  {{#> systems/torchbearer/templates/sheets/item/components/sheet-header.hbs}}
    {{#if editable}}
      editable!
    {{else}}
      not editable
    {{/if}}
  {{/systems/torchbearer/templates/sheets/item/components/sheet-header.hbs}}

  <nav class="tb-sheet-tab-nav sheet-tabs tabs" data-group="primary">
    <a class="tb-sheet-tab-nav__item item" data-tab="description">{{localize "TB2.HeadingDescription"}}</a>
    <a class="tb-sheet-tab-nav__item item" data-tab="effects">{{localize "TB2.HeadingEffects"}}</a>
    {{#if isPhysical}}
      <a class="tb-sheet-tab-nav__item item" data-tab="details">{{localize "TB2.HeadingDetails"}}</a>
    {{/if}}
    {{#if editable}}
      <a class="tb-sheet-tab-nav__item item" data-tab="configuration">{{localize "TB2.HeadingConfiguration"}}</a>
    {{/if}}
  </nav>

  {{log 'gear sheet' this}}
  {{!-- Common Item body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    {{#> systems/torchbearer/templates/sheets/item/tabs/description.hbs
      isPhysical=true}}
    {{/systems/torchbearer/templates/sheets/item/tabs/description.hbs}}

    {{!-- Effects Tab --}}
    {{> systems/torchbearer/templates/sheets/item/tabs/effects.hbs}}

    {{#if isPhysical}}
    {{!-- Details Tab --}}
      {{> systems/torchbearer/templates/sheets/item/tabs/details.hbs}}
    {{/if}}

    {{#> systems/torchbearer/templates/sheets/item/tabs/configuration.hbs}}
        <div class="form-group">
          <label for="data.cost-{{data._id}}">{{localize 'TB2.GearCostLabel'}}</label>
          <input
            class="tb-embedded-document-list__editable change-item"
            type="number" data-type="Number"
            name="data.cost"
            title="{{localize 'TB2.GearCostInput'}}"
            value="{{data.data.cost}}">
            <label for="data.cost-{{data._id}}">{{localize 'TB2.GearAvailabilityLabel'}}</label>
          <input
            class="tb-embedded-document-list__editable change-item"
            type="text" data-type="String"
            name="data.availability"
            title="{{localize 'TB2.GearAvailabilityInput'}}"
            value="{{data.data.availability}}">
          <label>{{localize 'TB2.GearBookNameLabel'}}
            <input
              class="tb-embedded-document-list__editable change-item"
              type="text" data-type="String"
              name="data.bookName"
              value="{{data.data.bookName}}">
          </label>
          <label>{{localize 'TB2.GearBookPageLabel'}}
            <input
              class="tb-embedded-document-list__editable change-item"
              type="text" data-type="String"
              name="data.page"
              value="{{data.data.page}}">
          </label>
        </div>
      {{> systems/torchbearer/templates/sheets/item/components/gear-slots.hbs}}
    {{/systems/torchbearer/templates/sheets/item/tabs/configuration.hbs}}

  </section>
</form>
