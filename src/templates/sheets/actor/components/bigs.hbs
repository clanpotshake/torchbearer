<div class="tb2-character-sheet-bigs">
  <h1>{{localize 'TB2.TitleBigs'}}</h1>
  <div>
    <label for="belief">{{localize "TB2.BigsBeliefLabel"}}</label>
    <input id="belief" data-type="String" type="text" name="data.belief" value="{{actor.data.data.belief}}" />

    <label for="instinct">{{localize "TB2.BigsInstinctLabel"}}</label>
    <input id="instinct" data-type="String" type="text" name="data.instinct" value="{{actor.data.data.belief}}" />

    <label for="goal">{{localize "TB2.BigsGoalLabel"}}</label>
    <input id="goal" data-type="String" type="text" name="data.goal" value="{{actor.data.data.belief}}" />

    {{#if creed}}
      <label for="creed">{{localize "TB2.BigsCreedLabel"}}</label>
      <input id="creed" data-type="String" type="text" name="data.creed" value="{{actor.data.data.belief}}" />
    {{/if}}
  </div>
</div>
